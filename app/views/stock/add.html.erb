<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h1>Add Stock</h1>
        </div>
      </div>
      <div class="row bg-light p-3">
        <div class="col-6">
          <%= form_for @stocks do |f| %>
            <div class="form-group">
              <label><%= f.label :name %></label>
              <%= f.text_field :name %>
            </div>
            <div class="form-group">
              <label><%= f.label :price, 'Unit Price' %></label>
              <%= f.text_field :price %>
            </div>
            <div class="form-group">
              <label><%= f.label :interest, 'Unit Price' %></label>
              <%= f.text_field :interest %>
            </div>
            <div class="form-group">
              <label><%= f.label :duration, 'Unit Price' %></label>
              <%= f.text_field :duration %>
            </div>

            <%= f.submit 'Create Stock' %>
          <% end %>
        </div>
        <div class="col-6"></div>
      </div>
    </div>
  </body>
</html>


