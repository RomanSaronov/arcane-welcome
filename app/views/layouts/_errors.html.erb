<div class="row">
  <div class="col">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert">
        <%= value %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
</div>

<style>
  .alert {
    height: 60px;
    margin-left: 15px;
    margin-right: 15px;
  }
</style>