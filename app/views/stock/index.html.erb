<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-12 pl-0 pr-0">
          <h1>Stock productivity calculator</h1>
        </div>
      </div>
      <div class="row bg-light p-1">
        <div class="col-12 text-center">
          <% if user_signed_in? %>
            <% if @posts.blank? %>
              <h5 class="mb-2 text-muted font-weight-light">No stocks available. Please add stock</h5>
              <a role="button" class="btn btn-primary" href="posts">+ Add Stock</a>
            <% else %>
              <% @posts.each do |post| %>
                <div class="card mb-1">
                  <div class="card-body row">
                    <div class="col-8">
                      <h5 class="card-title"><%= post.name %></h5>
                    </div>
                    <div class="col-4">
                      <a class="btn btn-primary">
                        <%= link_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?" } %>
                      </a>
                    </div>
                  </div>
                </div>
            <% end %>
          <% end %>

          <% else # user not signed it %>
            <h5 class="mb-2 text-muted font-weight-light">Login or register for stock operations</h5>
          <% end # if user is signed it %>
        </div>
      </div>
    </div>
  </body>
</html>


