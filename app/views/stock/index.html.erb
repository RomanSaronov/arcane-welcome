<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-12 pl-0 pr-0">
          <h1>Stock productivity calculator</h1>
        </div>
      </div>
      <div class="row bg-light p-3">
        <div class="col-12 text-center">
          <% if user_signed_in? %>
            <% if @posts.blank? %>
              <h5 class="mb-2 text-muted font-weight-light">No stocks available. Please add stock</h5>
              <a role="button" class="btn btn-primary" href="posts">+ Add Stock</a>
            <% else %>
              <% @posts.each do |post| %>
                <div class="card mb-2">
                  <div class="card-body row text-left">
                    <div class="col-8">
                      <h5 class="card-title"><%= post.name %></h5>
                    </div>
                    <div class="col-4 text-right">
                      <%= link_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?" } %>
                    </div>
                  </div>
                </div>
            <% end %>
          <% end %>

          <% else # user not signed it %>
            <h5 class="mb-2 text-muted font-weight-light">Login or register for stock operations</h5>
          <% end # if user is signed it %>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  .card {
    border-radius: 4px !important;
    border: none !important;
    box-shadow: 3px 0px 9px 0px #e4e4e4;
  }
</style>

