<!--Navigation bar component-->
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <%= link_to "Stock", root_path, :class => "my-0 mr-md-auto font-weight-normal"%>
  <% if user_signed_in? %>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="stock/new/">Add Stock</a>
    </nav>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  <% else # user not signed it %>
    <a href="login" class="btn btn-outline-primary">Login</a>
    <a href="register" class="btn btn-outline-primary ml-2">Sign up</a>
  <% end # if user is signed it %>
</div>